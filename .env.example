# ReservApp Environment Variables Example
# Copy this file to .env and update with your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME=ReservApp
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_URL=http://localhost:3000/api

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres.your_project_id:your_password@your_host.supabase.com:5432/postgres
DIRECT_DATABASE_URL=postgresql://postgres.your_project_id:your_password@your_host.supabase.com:5432/postgres


# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe Configuration (Test/Sandbox)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Stripe Plan Price IDs (Test Mode)
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly_mx
STRIPE_PREMIUM_PLUS_PRICE_ID=price_premium_plus_monthly_mx
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_mx

# Resend Email Service Configuration
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=ReservApp
RESEND_TARGET_EMAIL=your_target_email@gmail.com

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Vercel Configuration
VERCEL_API_TOKEN=your_vercel_api_token

# Dashboard Refresh Configuration (in milliseconds)
# All intervals set to 10 minutes (600000ms) for optimal performance
NEXT_PUBLIC_STATS_REFRESH_INTERVAL=600000
NEXT_PUBLIC_CHARTS_REFRESH_INTERVAL=600000
NEXT_PUBLIC_LOGS_REFRESH_INTERVAL=600000
NEXT_PUBLIC_REALTIME_REFRESH_INTERVAL=600000
NEXT_PUBLIC_AUTO_REFRESH_ENABLED=true

# Development/Production Flags
NEXT_PUBLIC_ENABLE_MOCKS=false
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_EMAILS=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://192.168.*,capacitor://localhost,ionic://localhost

# Development Settings
NEXT_TELEMETRY_DISABLED=1
