# ReservApp Environment Variables Example
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_URL=http://localhost:3000/api

# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=ReservApp
NEXT_PUBLIC_APP_VERSION=1.0.0

# Vercel Configuration
VERCEL_API_TOKEN=your_vercel_api_token

# Database Configuration (Railway)
DATABASE_URL=

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024-reservapp
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe Configuration (Test/Sandbox)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Premium Plan Price IDs (Test Mode)
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly_mx
STRIPE_PREMIUM_PLUS_PRICE_ID=price_premium_plus_monthly_mx
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_mx

# Resend Email Service Configuration
RESEND_API_KEY=
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=ReservApp
RESEND_TARGET_EMAIL=danny.danzka21@gmail.com

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Dashboard Refresh Configuration (in milliseconds)
# All intervals set to 10 minutes (600000ms) for optimal performance

# Stats refresh interval (10 minutes = 600000ms)
NEXT_PUBLIC_STATS_REFRESH_INTERVAL=600000

# Chart refresh interval (10 minutes = 600000ms)
NEXT_PUBLIC_CHARTS_REFRESH_INTERVAL=600000

# System logs refresh interval (10 minutes = 600000ms)
NEXT_PUBLIC_LOGS_REFRESH_INTERVAL=600000

# Real-time features refresh interval (10 minutes = 600000ms)
NEXT_PUBLIC_REALTIME_REFRESH_INTERVAL=600000

# Auto-refresh enable/disable (default: true)
NEXT_PUBLIC_AUTO_REFRESH_ENABLED=true

# Development/Production Flags
NEXT_PUBLIC_ENABLE_MOCKS=false
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_EMAILS=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://192.168.*,capacitor://localhost,ionic://localhost

# Development Settings
NEXT_TELEMETRY_DISABLED=1
