# Template for .env.local file
# Copy this file to .env.local and fill in the actual values

# Google Maps API Key for address autocomplete
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Other environment variables from .env.production
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Database URL (for local development)
DATABASE_URL=your_database_url_here

# JWT Secret
JWT_SECRET=your_jwt_secret

# Stripe Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@reservapp.com
RESEND_FROM_NAME=ReservApp - Casa Salazar
NEXT_PUBLIC_ENABLE_EMAILS=true

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCKS=false