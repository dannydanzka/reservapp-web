API_URL=https://reservapp-web.vercel.app/api

# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_NAME=ReservApp
NEXT_PUBLIC_APP_VERSION=1.0.0

# Vercel Configuration
VERCEL_API_TOKEN=

# Database Configuration
