{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["./src/libs/*"],
      "@shared/*": ["./src/libs/shared/*"],
      "@presentation/*": ["./src/libs/presentation/*"],
      "@infrastructure/*": ["./src/libs/infrastructure/*"],
      "@domains/*": ["./src/libs/domains/*"],
      "@ui/*": ["./src/libs/presentation/components/*"],
      "@hooks/*": ["./src/libs/presentation/hooks/*"],
      "@providers/*": ["./src/libs/presentation/providers/*"],
      "@layouts/*": ["./src/libs/presentation/layouts/*"],
      "@services/*": ["./src/libs/services/*", "./src/libs/infrastructure/services/*"],
      "@repositories/*": ["./src/libs/infrastructure/repositories/*"],
      "@config/*": ["./src/libs/shared/config/*"],
      "@types/*": ["./src/libs/shared/types/*"],
      "@constants/*": ["./src/libs/shared/constants/*"],
      "@i18n/*": ["./src/libs/shared/i18n/*"],
      "@modules/*": ["./src/modules/*"],
      "@mod-auth/*": ["./src/modules/mod-auth/*"],
      "@mod-admin/*": ["./src/modules/mod-admin/*"],
      "@mod-landing/*": ["./src/modules/mod-landing/*"],
      "@api/*": ["./src/app/api/*"],
      "@__tests__/*": ["./src/__tests__/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__/__disabled__/**/*",
    "src/libs/domains/**/*",
    "src/__disabled__/**/*",
    "__disabled__/**/*",
    "__disabled__tests__/**/*"
  ]
}
